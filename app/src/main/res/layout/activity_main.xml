<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/search_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/edittext_shadow"
        android:hint="시설명⸰주소⸰건물명 검색"
        android:paddingStart="25dp"
        android:paddingEnd="15dp"
        android:textAlignment="textStart"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_category_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:constraint_referenced_ids="shop_category_btn, living_category_btn,
           education_category_btn, hospital_category_btn, public_category_btn"
        />

    <Button
        android:id="@+id/shop_category_btn"
        android:textSize="12sp"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_refresh"
        android:text="음식⸰상점"
        android:textColor="#1750FB"
        app:layout_constraintTop_toBottomOf="@+id/search_btn"
        app:layout_constraintStart_toStartOf="@+id/search_btn"
        app:layout_constraintEnd_toStartOf="@id/living_category_btn"
        />

    <Button
        android:id="@+id/living_category_btn"
        android:textSize="12sp"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:background="@drawable/button_refresh"
        android:text="생활시설"
        android:textColor="#1750FB"
        app:layout_constraintTop_toTopOf="@+id/shop_category_btn"
        app:layout_constraintStart_toEndOf="@+id/shop_category_btn"
        app:layout_constraintEnd_toStartOf="@id/education_category_btn"
        />

    <Button
        android:id="@+id/education_category_btn"
        android:textSize="12sp"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:background="@drawable/button_refresh"
        android:text="교육시설"
        android:textColor="#1750FB"
        app:layout_constraintTop_toTopOf="@+id/living_category_btn"
        app:layout_constraintStart_toEndOf="@+id/living_category_btn"
        app:layout_constraintEnd_toStartOf="@id/hospital_category_btn"
        />
    <Button
        android:id="@+id/hospital_category_btn"
        android:textSize="12sp"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:background="@drawable/button_refresh"
        android:text="병원"
        android:textColor="#1750FB"
        app:layout_constraintTop_toTopOf="@+id/education_category_btn"
        app:layout_constraintStart_toEndOf="@+id/education_category_btn"
        app:layout_constraintEnd_toStartOf="@id/public_category_btn"
        />

    <Button
        android:id="@+id/public_category_btn"
        android:textSize="12sp"
        android:layout_width="95dp"
        android:layout_height="35dp"
        android:background="@drawable/button_refresh"
        android:text="공공기관 및 기타"
        android:textColor="#1750FB"
        app:layout_constraintTop_toTopOf="@+id/hospital_category_btn"
        app:layout_constraintStart_toEndOf="@+id/hospital_category_btn"
        app:layout_constraintEnd_toEndOf="@id/search_btn"
        />



    <Button
        android:id="@+id/refresh_btn"
        android:textSize="12sp"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/button_refresh"
        android:text="⟳ 이 지역 재검색"
        android:textColor="#1750FB"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintStart_toStartOf="@id/bottom_nav"
        app:layout_constraintEnd_toEndOf="@id/bottom_nav"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clKakaoMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edittext_shadow"
        app:itemTextColor="@color/teal_700"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nev_menu"
        tools:visibility="invisible" />

    <ImageButton
        android:id="@+id/mylocation_btn"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:elevation="3dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_mylocation"
        android:src="@drawable/ic_baseline_my_location"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintEnd_toEndOf="@+id/bottom_nav"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/result_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edittext_shadow"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gline"
        tools:visibility="visible">

        <TextView
            android:id="@+id/result_nm_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#333333"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/result_layout"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintStart_toStartOf="@+id/result_layout"
            app:layout_constraintTop_toTopOf="@+id/result_layout"
            tools:text="오류동 문화센터" />

        <TextView
            android:id="@+id/result_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintBottom_toBottomOf="@+id/result_nm_tv"
            app:layout_constraintStart_toEndOf="@+id/result_nm_tv"
            app:layout_constraintTop_toTopOf="@+id/result_nm_tv"
            tools:text="교육시설" />

        <TextView
            android:id="@+id/result_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintStart_toStartOf="@+id/result_nm_tv"
            app:layout_constraintTop_toBottomOf="@+id/result_nm_tv"
            tools:text="서울특별시 구로구 고척로18길 86" />

        <View
            android:id="@+id/result_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#E6E6E6"
            app:layout_constraintEnd_toEndOf="@+id/result_more_info_tv"
            app:layout_constraintStart_toStartOf="@+id/result_nm_tv"
            app:layout_constraintTop_toBottomOf="@+id/result_location_tv" />

        <Button
            android:id="@+id/result_more_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/button_circle"
            android:text="···"
            android:textColor="#717171"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/result_more_info_tv"
            app:layout_constraintEnd_toEndOf="@+id/result_layout"
            app:layout_constraintTop_toTopOf="@+id/result_recycler_view"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/result_more_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="상세보기"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintBottom_toBottomOf="@+id/result_recycler_view"
            app:layout_constraintEnd_toEndOf="@+id/result_more_btn"
            app:layout_constraintStart_toStartOf="@+id/result_more_btn"
            app:layout_constraintTop_toBottomOf="@+id/result_more_btn" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/result_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/result_line"
            app:layout_constraintBottom_toBottomOf="@+id/result_layout"
            app:layout_constraintEnd_toStartOf="@+id/result_more_btn"
            app:layout_constraintStart_toStartOf="@+id/result_line"
             />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>