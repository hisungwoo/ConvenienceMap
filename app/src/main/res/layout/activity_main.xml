<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/edittext_shadow"
        app:itemTextColor="@color/teal_700"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"
        app:menu="@menu/bottom_nev_menu" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <View
        android:id="@+id/result_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edittext_shadow"
        app:layout_constraintTop_toBottomOf="@+id/gline"
        app:layout_constraintStart_toStartOf="@+id/bottom_nav"
        app:layout_constraintEnd_toEndOf="@+id/bottom_nav"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav" />


    <TextView
        android:id="@+id/result_nm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="오류동 문화센터"
        tools:text="오류동 문화센터"
        android:textColor="#333333"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintEnd_toEndOf="@+id/result_view"
        app:layout_constraintStart_toStartOf="@+id/result_view"
        app:layout_constraintTop_toTopOf="@+id/result_view" />

    <TextView
        android:id="@+id/result_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="교육시설"
        tools:text="교육시설"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/result_nm_tv"
        app:layout_constraintBottom_toBottomOf="@+id/result_nm_tv"
        app:layout_constraintStart_toEndOf="@+id/result_nm_tv"
    />

    <TextView
        android:id="@+id/result_location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="서울특별시 구로구 고척로18길 86"
        tools:text="서울특별시 구로구 고척로18길 86"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintTop_toBottomOf="@+id/result_nm_tv"
        app:layout_constraintStart_toStartOf="@+id/result_nm_tv"
        />

    <View
        android:id="@+id/result_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#E6E6E6"
        app:layout_constraintTop_toBottomOf="@+id/result_location_tv"
        app:layout_constraintStart_toStartOf="@+id/result_nm_tv"
        app:layout_constraintEnd_toEndOf="@+id/result_more_info_tv"
        />

    <Button
        android:id="@+id/more_info_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="40dp"
        android:text="···"
        android:textSize="15sp"
        android:textColor="#717171"
        android:background="@drawable/button_circle"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/result_line"
        app:layout_constraintEnd_toEndOf="@+id/result_view"
        app:layout_constraintBottom_toTopOf="@+id/result_more_info_tv"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/result_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/result_line"
        app:layout_constraintStart_toStartOf="@+id/result_line"
        app:layout_constraintEnd_toStartOf="@+id/more_info_btn"
        app:layout_constraintBottom_toBottomOf="@+id/result_view"
        />


    <TextView
        android:id="@+id/result_more_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_marginTop="2dp"
        android:text="더보기"
        app:layout_constraintTop_toBottomOf="@+id/more_info_btn"
        app:layout_constraintStart_toStartOf="@+id/more_info_btn"
        app:layout_constraintEnd_toEndOf="@+id/more_info_btn"
        />





</androidx.constraintlayout.widget.ConstraintLayout>