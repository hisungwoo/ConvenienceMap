<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="30dp"
    android:background="#F1F1F1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.DetailFragment">

    <View
        android:id="@+id/topLayout_detail"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageButton
        android:id="@+id/back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_baseline_keyboard_backspace_24"
        android:background="#00000000"
        app:layout_constraintTop_toTopOf="@+id/topLayout_detail"
        app:layout_constraintBottom_toBottomOf="@+id/topLayout_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        />

    <ScrollView
        android:id="@+id/detail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/topLayout_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detail_constraint_in"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >

            <WebView
                android:id="@+id/detail_web_view"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintTop_toTopOf="@+id/detail_constraint_in"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <View
                android:id="@+id/detail_title_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/detail_web_view"
                app:layout_constraintStart_toStartOf="@id/detail_web_view"
                app:layout_constraintEnd_toEndOf="@id/detail_web_view"
                app:layout_constraintBottom_toBottomOf="@+id/detail_title_end_view"
                />

            <TextView
                android:id="@+id/detail_facl_nm_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="광명7동 행정복지센터"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintTop_toBottomOf="@+id/detail_web_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.1"


                />

            <TextView
                android:id="@+id/detail_lc_mnad_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경기 광명시 광명동 742-2"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/detail_facl_nm_tv"
                app:layout_constraintStart_toStartOf="@+id/detail_facl_nm_tv"

                />

            <TextView
                android:id="@+id/detail_estb_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20030703"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/detail_lc_mnad_tv"
                app:layout_constraintStart_toStartOf="@+id/detail_lc_mnad_tv"
                />

            <TextView
                android:id="@+id/detail_sta_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영업중"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/detail_estb_date_tv"
                app:layout_constraintStart_toStartOf="@+id/detail_estb_date_tv"
                />

            <TextView
                android:id="@+id/detail_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공공기관"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/detail_sta_tv"
                app:layout_constraintStart_toStartOf="@+id/detail_sta_tv"
                />

            <TextView
                android:id="@+id/detail_rprn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이동건"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/detail_type_tv"
                app:layout_constraintStart_toStartOf="@+id/detail_type_tv"
                />

            <View
                android:id="@+id/detail_title_end_view"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/detail_rprn_tv"
                app:layout_constraintStart_toStartOf="@id/detail_rprn_tv"
                />

            <View
                android:id="@+id/eval_info_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/detail_title_end_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/eval_info_view_end"
                />


            <TextView
                android:id="@+id/detail_eval_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="시설 정보"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintTop_toTopOf="@+id/eval_info_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                />


            <TextView
                android:id="@+id/detail_eval_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장애인주차장, 경사로, 대변기"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/detail_eval_info_title"
                app:layout_constraintStart_toStartOf="@+id/detail_eval_info_title"
                />


            <View
                android:id="@+id/eval_info_view_end"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/detail_eval_info_tv"
                app:layout_constraintStart_toStartOf="@+id/detail_eval_info_tv"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>

















